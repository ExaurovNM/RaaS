@using Tools.HtmlHelpers
<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <script src="@Url.Content("~/Scripts/jquery-1.8.0.min.js")" type="text/javascript"></script>
        <link href="../../Content/bootstrap.css" rel="stylesheet" type="text/css" />
        <link href="../../Content/bootstrap-responsive.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/bootstrap.js" type="text/javascript"></script>
        <link href="../../Content/custome.css" rel="stylesheet" type="text/css" />
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:600' rel='stylesheet' type='text/css'>
        <script src="../../Scripts/site.js" type="text/javascript"></script>

    </head>
 <body>
     <div class="mainconteiner">
         <div class="menu-container">
             <div class="menu-holder">
                 <div class="tagline">
                     @Html.Partial("_TitlePartial")
                     @if (this.IsSectionDefined("Menu_tagline"))
                     {@RenderSection("Menu_tagline")}
                 </div>
             </div>
            
         </div>
         <div class="content-conteiner">
             <div class="leftpanel">
                 @if (this.IsSectionDefined("LeftPanel"))
                 {@RenderSection("LeftPanel")}
                 else
                 {<div>Nothing to dispay in main content</div>}
             </div>
             <div class="rightpanel">
                 @if (this.IsSectionDefined("RightPanel"))
                 {@RenderSection("RightPanel")}
                 else
                 {<div>Nothing to dispay in this column</div>}
             </div>
             @RenderBody()
         </div>

         <div id="footer">
         </div>
     </div>
 </body>
</html>
